<?xml version="1.0" encoding="utf-8"?>
<shape xmlns:android="http://schemas.android.com/apk/res/android"
    android:shape="rectangle">

    <!-- Background Color -->
    <solid android:color="#FFFFFF" /> <!-- White Background -->

    <!-- Border -->
    <stroke
        android:width="2dp"
        android:color="#CCCCCC" /> <!-- Light Gray Border -->

    <!-- Rounded Corners -->
    <corners android:radius="12dp" /> <!-- 12dp Corner Radius -->

    <!-- Padding (Optional) -->
    <padding
        android:left="10dp"
        android:top="10dp"
        android:right="10dp"
        android:bottom="10dp" />

    <!-- Removed the invalid <elevation> element -->
</shape>